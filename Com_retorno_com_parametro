        "def media(prova1,prova2):\n",
        "    media_prova = (prova1 + prova2) / 2\n",
        "    return situacao(media_prova)\n",
        "\n",
        "def situacao(media):\n",
        "    if media >= 6:\n",
        "        print(\"Aprovado\")\n",
        "    else:\n",
        "        print(\"Reprovado\")\n",
        "\n",
        "def main():\n",
        "    p1 = float(input(\"Insira a nota da primeira prova: \"))\n",
        "    p2 = float(input(\"Insira a nota da segunda prova: \"))\n",
        "    media(p1,p2)\n",
        "\n",
        "main()"
